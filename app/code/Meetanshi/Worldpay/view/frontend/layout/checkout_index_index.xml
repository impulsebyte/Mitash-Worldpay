<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/age_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="renders" xsi:type="array">
                                                            <!-- merge payment method renders here -->
                                                            <item name="children" xsi:type="array">
                                                                <item name="worldpay_payments_methods" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Meetanshi_Worldpay/js/view/payment/method-renderer</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="card" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="paypal4" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="alipay" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="giropay" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="ideal" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="mistercash" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="przelewy24" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="paysafecard" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="postepay" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="qiwi" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="sofort" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                        <item name="yandex" xsi:type="array">
                                                                            <item name="isBillingAddressRequired"
                                                                                  xsi:type="boolean">true
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page> 
